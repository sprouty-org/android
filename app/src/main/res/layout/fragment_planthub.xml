<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.planthub.PlanthubFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Section -->

        <android.widget.Button
            android:id="@+id/button_lifecycle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/left_capsule"
            android:text="Lifecycle"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed" />

        <android.widget.Button
            android:id="@+id/button_image"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/right_capsule"
            android:text="Image"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingHorizontal="24dp"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@id/button_lifecycle"
            app:layout_constraintStart_toEndOf="@id/button_lifecycle"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/plant_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/button_lifecycle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="3:4"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            app:srcCompat="@drawable/aspect_plant" />

        <!-- Scroll down button -->
        <Button
            android:id="@+id/button_scroll_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▼ More Info"
            android:textStyle="bold"
            android:backgroundTint="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/plant_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Info Section -->
        <LinearLayout
            android:id="@+id/info_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/button_scroll_down">

            <TextView
                android:id="@+id/plant_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the plant info section. You can describe your plant here with scientific name, watering schedule, light preferences, and so on."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="24dp" />

            <!-- Scroll up button -->
            <Button
                android:id="@+id/button_scroll_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▲ Back to Image"
                android:textStyle="bold"
                android:backgroundTint="@android:color/darker_gray"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>