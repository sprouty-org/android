<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.planthub.PlanthubFragment">

    <!-- The main plant image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/plant_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lifecycle"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/RoundedImage"
        app:srcCompat="@drawable/aspect_plant" />

    <android.widget.Button
        android:id="@+id/button_lifecycle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/left_capsule"
        android:text="Lifecycle"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <android.widget.Button
        android:id="@+id/button_image"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/right_capsule"
        android:text="Image"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:paddingHorizontal="24dp"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/button_lifecycle"
        app:layout_constraintStart_toEndOf="@id/button_lifecycle"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>