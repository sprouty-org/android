<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.garden.PlantDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top bar with plant name -->
            <TextView
                android:id="@+id/textPlantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sprouty_green"
                android:padding="12dp"
                android:text="Plant Name"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="start|center_vertical" />

            <!-- Full-width plant image -->
            <ImageView
                android:id="@+id/imagePlant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/plant_image"
                android:src="@drawable/ic_flower_rose" />

            <!-- Slider (tabs) -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/sprouty_green"
                app:tabSelectedTextColor="@color/sprouty_green"
                app:tabTextColor="@android:color/darker_gray"
                android:background="@android:color/white"
                android:elevation="4dp">

                <com.google.android.material.tabs.TabItem
                    android:text="Picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.google.android.material.tabs.TabItem
                    android:text="Lifecycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.google.android.material.tabs.TabLayout>

            <!-- Latest sensor data -->
            <LinearLayout
                android:id="@+id/layoutSensorData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F5F5F5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest Sensor Data"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textSensorData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soil Moisture: 43%\nTemperature: 22°C\nLight: Moderate"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Plant attributes list -->
            <LinearLayout
                android:id="@+id/layoutAttributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textAttributes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Sort: Rosa Rubiginosa\nFamily: Rosaceae\nBest Conditions: Sunny, moderate watering\nTime to Grow: 6 months\nRegion: Southern Europe\nSoil Type: Loamy\nTemperature Range: 10–25°C"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>